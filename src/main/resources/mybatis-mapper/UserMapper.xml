<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eleven.manage.platform.mybatis.dao.UserDao" >
    <sql id="BASE_TABLE">user</sql>

    <sql id="BASE_COLUMN">id,user_name,create_time</sql>

    <insert id="insert" parameterType="com.eleven.manage.platform.mybatis.model.UserDO">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            user_name
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{userName, jdbcType=VARCHAR}
        </trim>
    </insert>

    <select id="selectUsers" resultType="com.eleven.manage.platform.mybatis.model.UserDO">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>


</mapper>